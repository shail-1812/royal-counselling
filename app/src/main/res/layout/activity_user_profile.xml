<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/pt_sans"
            android:gravity="center_horizontal"
            android:text="User Profile"

            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src="@drawable/ic_icon"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                app:civ_circle_background_color="#0C02FF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Choose a profile picture"
                android:textColor="#000"
                android:textSize="10sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <EditText
            android:id="@+id/edt_user_profile_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:autofillHints=""
            android:background="@drawable/edt_background"
            android:drawableStart="@drawable/ic_baseline_location_city_24"
            android:drawableLeft="@drawable/ic_baseline_location_city_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/pt_sans"
            android:hint="City"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="17dp"
            android:singleLine="true"
            android:textColor="#9C000000"
            android:textColorHint="#7E000000"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edt_user_profile_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_background"
            android:drawableStart="@drawable/ic_baseline_location_city_24"
            android:drawableLeft="@drawable/ic_baseline_location_city_24"

            android:drawablePadding="10dp"
            android:fontFamily="@font/pt_sans"
            android:hint="State"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="17dp"
            android:singleLine="true"
            android:textColor="#9C000000"
            android:textColorHint="#7E000000"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edt_user_profile_institution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:autofillHints=""
            android:background="@drawable/edt_background"
            android:drawableStart="@drawable/ic_baseline_location_city_24"
            android:drawableLeft="@drawable/ic_baseline_location_city_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/pt_sans"
            android:hint="Institution name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="17dp"
            android:singleLine="true"

            android:textColor="#9C000000"
            android:textColorHint="#7E000000"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edt_user_profile_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:autofillHints=""
            android:background="@drawable/edt_background"
            android:drawableStart="@drawable/ic_baseline_school_24"
            android:drawableLeft="@drawable/ic_baseline_school_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/pt_sans"
            android:hint="Grade / Year of college"

            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="17dp"
            android:singleLine="true"
            android:textColor="#9C000000"
            android:textColorHint="#7E000000"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edt_user_profile_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:autofillHints=""
            android:background="@drawable/edt_background"
            android:drawableStart="@drawable/ic_baseline_school_24"
            android:drawableLeft="@drawable/ic_baseline_school_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/pt_sans"
            android:hint="Board (CBSE/Guj)"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:padding="17dp"
            android:singleLine="true"
            android:textColor="#9C000000"
            android:textColorHint="#7E000000"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <RadioGroup
            android:id="@+id/radio_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_background"
            android:orientation="horizontal"
            android:padding="15dp">

            <RadioButton
                android:id="@+id/radio_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#000"
                android:text="Male"
                android:textColor="#AB000000"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/radio_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="#000"
                android:text="Female"
                android:textColor="#AB000000"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_user_profile_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_colour_change"
            android:fontFamily="@font/pt_sans"
            android:padding="15dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="45dp"
            android:contentDescription="footer"
            android:src="@drawable/logo4"
            tools:ignore="HardcodedText" />


    </LinearLayout>

</ScrollView>