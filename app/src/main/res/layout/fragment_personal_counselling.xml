<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ui.PersonalCounsellingFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/pt_sans"
            android:text="Book Counselling"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <CalendarView
            android:id="@+id/calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="#5B69E3" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_sans"
            android:text="Mode Of Counselling : "
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText"
            />
        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/radio_group"
            >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online"
                    android:layout_weight="1"
                    android:fontFamily="@font/pt_sans"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    android:buttonTint="#000"
                    android:id="@+id/radio_online"
                    />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offline"
                android:layout_weight="1"
                android:fontFamily="@font/pt_sans"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                android:buttonTint="#000"
                android:id="@+id/radio_offline"
                />


        </RadioGroup>
        </LinearLayout>

        <Spinner
            android:id="@+id/spinner_time"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/dropdown" />

        <Button
            android:id="@+id/btn_register_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_colour_change"
            android:padding="20dp"
            android:text="Book counselling"
            android:textAllCaps="false"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="45dp"
            android:contentDescription="footer"
            android:src="@drawable/logo4"
            tools:ignore="HardcodedText" />

    </LinearLayout>


</ScrollView>